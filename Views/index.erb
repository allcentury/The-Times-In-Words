<h1>2013</h1>

  <% @hash.each do |k,v|%>
    <div class="circle" 
         style="width: <%= v * 10 %>px;
                height: <%= v * 10 %>px; 
                left: <%= rand(9)* 10%>%;
                top: <%= rand(9)* 10%>%;
                font-size: <%= v * 1.1  %>px;
                ">
        <div class="text"><%= k %> <br>----<br>   <%= v %></div>
    </div>
  <% end %>















